<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_activated="true">
        <set>
            <objectAnimator android:duration="0" android:valueTo="4" android:valueType="intType" android:propertyName="visibility" />
        </set>
    </item>
    <item android:state_selected="true">
        <set>
            <objectAnimator android:duration="0" android:valueTo="0" android:valueType="intType" android:propertyName="visibility" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="0" android:valueTo="8" android:valueType="intType" android:propertyName="visibility" />
        </set>
    </item>
</selector>